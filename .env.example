# DisRad Residential Service 2.0 - Environment Configuration
# Copy this to .env and fill in the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3100
NODE_ENV=production

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
API_KEY=your-32-character-api-key-here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# BROWSER POOL (Playwright)
# =============================================================================
# Maximum concurrent browser contexts (each uses ~200MB RAM)
BROWSER_MAX_CONTEXTS=3

# Timeout for acquiring a browser context (ms)
BROWSER_CONTEXT_TIMEOUT_MS=60000

# Timeout for page operations (ms)
BROWSER_PAGE_TIMEOUT_MS=30000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Maximum number of cached items (LRU eviction)
CACHE_MAX_SIZE=100

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL_SECONDS=3600

# =============================================================================
# LOGGING
# =============================================================================
# Options: error, warn, info, debug
LOG_LEVEL=info
